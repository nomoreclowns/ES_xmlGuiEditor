        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="350" Width="525" WindowStyle="ThreeDBorderWindow" Closing="closingWindow" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="11*"/>
    		<RowDefinition Height="149*"/>
    	</Grid.RowDefinitions>
    	<ListBox Grid.Row="1" Background="#FFD1D1D1"/>
