<Application x:Class="ES_XML_Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ESXE="clr-namespace:ES_XML_Editor"
             StartupUri="EditorController.xaml" ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <DataTemplate DataType="WeaponModule">
        	<Grid Height="136.5" Width="241">
        		<ListBox HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" SelectionMode="Extended" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Center"/>
                        <!--
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"/>
                        -->
                        <TextBox x:Name="textBox" HorizontalAlignment="Left" Text="{Binding Path=Attribute[Name].Value}" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
                    </StackPanel>

                </ListBox>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
