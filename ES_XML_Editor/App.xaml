                                <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center"/>
                                <TextBlock Text=": " VerticalAlignment="Center"/>
                                <TextBlock HorizontalAlignment="Left" Text="{Binding Path=Value}" VerticalAlignment="Top"/>
                            </StackPanel>
                        </DataTemplate>

                        <DataTemplate x:Key="lonelyElement" DataType="{x:Type ESXE:DataElement}">
                            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Horizontal">
                                <TextBlock HorizontalAlignment="Left" Text="{Binding Path=Name}" VerticalAlignment="Center"/>
                                <TextBlock HorizontalAlignment="Left" Text=": " VerticalAlignment="Center"/>
                                <TextBlock HorizontalAlignment="Left" Text="{Binding Path=Value}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>

